#:kivy 2.1.0

<Window>:
    Label:
        text: 'App Title'
        text_size: self.size
        size_hint_y: .1
        halign: 'center'
        valign: 'center'
        canvas.before:
            Color:
                rgba: 1, .3, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        bar_width: 10
        scroll_type: ['bars', 'content']

        canvas.before:
            Color:
                rgba: 0, 1, 0, 1
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1

            Button:
                text: 'Left Btn'
                size_hint_x: .3
                on_press: root.on_press_button()

            Button:
                text: 'Right Btn'
                size_hint_x: .7
                on_press: root.on_press_button()

    Label:
        text: 'App Footer'
        text_size: self.size
        halign: 'left'
        valign: 'center'
        size_hint_y: .1
        canvas.before:
            Color:
                rgba: 0, 0, .5, 1
            Rectangle:
                size: self.size
                pos: self.pos