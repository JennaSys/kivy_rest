ScreenManager:
    BookList:
        name: 'books'
    BookEdit:
        name: 'edit'
    LoginScreen:
        name: 'login'

<BookEdit>:
    MDBoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: "10dp"

        MDToolbar:
            id: app_toolbar
            elevation: 10
            title: "Edit Book"
            right_action_items: [["close", lambda ref: app.switch_screen('books')]]

        MDCard:
            orientation : 'vertical'

            MDLabel:
                id: book_id

            MDTextField:
                id: title
                hint_text: "Book Title"

            MDTextField:
                id: author
                hint_text: "Book Author"

            MDRoundFlatButton:
                text: "SAVE"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release: root.do_save()

<BookList>:
    MDBoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: "10dp"

        MDToolbar:
            id: app_toolbar
            elevation: 10
            title: "All the Books"
            left_action_items: [['plus-circle', app.handle_addnew, "Add new book"]]
            right_action_items: [["dots-vertical", lambda ref: app.menu_callback(ref)]]

        ScrollView:
            scroll_timeout : 100

            MDList:
                id: booklist
                adaptive_height: True
                padding: 0

<Book>:
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "16dp"

        MDIconButton:
            icon: 'trash-can'
            pos_hint: {"center_y": .5}
            on_release: root.handle_delete()

    MDCardSwipeFrontBox:
        TwoLineIconListItem:
            id: content
            text: root.text
            secondary_text: root.secondary_text
            on_release: app.handle_edit(root.book_id)

            IconLeftWidget:
                icon: "book-open"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_light
                on_release: app.handle_edit(root.book_id)

<LoginScreen>:
    MDCard
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        border_radius: 20
        radius: [15]
        orientation: 'vertical'

        MDIconButton:
            icon: 'close'
            pos_hint: {"right": 1}
            on_release: app.cancel_login()

        MDLabel:
            text: "LOGIN"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_color

        MDTextFieldRound:
            id: username
            hint_text: "User Name"
            icon_right: "account"
            normal_color: app.theme_cls.primary_light
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: password
            hint_text: "Password"
            icon_right: "eye-off"
            normal_color: app.theme_cls.primary_light
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: app.do_login()

        Widget:
            size_hint_y: None
            height: 10
