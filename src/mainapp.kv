MDScreen:

    MDBoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: "10dp"

        MDToolbar:
            elevation: 10
            title: "All the Books"
            right_action_items: [['plus-circle', app.handle_addnew, "Add new book"]]

        ScrollView:
            scroll_timeout : 100

            MDList:
                id: books
                adaptive_height: True
                padding: 0

<Book>:
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "16dp"

        MDIconButton:
            icon: 'trash-can'
            pos_hint: {"center_y": .5}
            on_release: root.handle_delete()

    MDCardSwipeFrontBox:
        TwoLineIconListItem:
            id: content
            text: root.text
            secondary_text: root.secondary_text
            on_release: root.handle_select()

            IconLeftWidget:
                icon: "book-open"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_light
                on_release: root.handle_select()
