# Global UI layout dimensions
#:import Window kivy.core.window.Window
#:set screen_size (Window.size[0]**2 + Window.size[1]**2)**0.5
#:set normal_font dp(18)
#:set large_font normal_font * 2
#:set rel_space normal_font / 2
#:set list_space rel_space / 2
#:set widget_elevation dp(8)

#:import LoginScreen View.LoginScreen
#:import BookEdit View.BookEdit
#:import BookList View.BookList

<SM>:
    BookList:
        name: 'books'
    BookEdit:
        name: 'edit'
    LoginScreen:
        name: 'login'
    AboutScreen:
        name: 'about'


<MenuItem>:
    IconLeftWidgetWithoutTouch:
        icon: root.icon
        pos_hint: {"center_y": .5}
