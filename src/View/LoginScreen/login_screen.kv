#:import Window kivy.core.window.Window

#:set screen_size (Window.size[0]**2 + Window.size[1]**2)**0.5
#:set large_font screen_size * 0.04
#:set normal_font screen_size * 0.02
#:set rel_space screen_size * 0.02

<TextField@MDTextFieldRound>:
    normal_color: app.theme_cls.primary_light
    font_size: normal_font
    pos_hint: {"center_x": 0.5}


<LoginScreen>:
    MDCard:
        size_hint: 0.7, 0.7
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: dp(10)
        padding: rel_space
        spacing: rel_space
        border_radius: rel_space
        radius: [rel_space * 0.8]
        orientation: 'vertical'

        MDIconButton:
            icon: 'close'
            pos_hint: {"right": 1}
            on_release: app.cancel_login()

        MDLabel:
            text: "LOGIN"
            font_size: large_font
            halign: 'center'
            size_hint_y: 0.4
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_color

        BoxLayout:
            orientation: 'vertical'
            spacing: rel_space
            padding: rel_space
            size_hint_x: 1
            size_hint_y: None
            pos_hint: {"center_x": 0.5}

            TextField:
                id: username
                hint_text: "User Name"
                icon_right: "account"
                height: normal_font * 1.5

            TextField:
                id: password
                hint_text: "Password"
                icon_right: "eye-off"
                password: True

        MDRoundFlatButton:
            text: "LOGIN"
            font_size: normal_font
            pos_hint: {"center_x": 0.5}
            size_hint_x: 0.5
            on_release: app.do_login()

        Widget:
            size_hint_y: 0.2
