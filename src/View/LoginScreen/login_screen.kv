<ElevatedCard@MDCard+CommonElevationBehavior>
    elevation: widget_elevation
    padding: [rel_space]
    spacing: rel_space
    border_radius: rel_space * 1.2
    radius: [rel_space]
    orientation: 'vertical'


<LoginField@MDTextField>:
    mode: "round"
    normal_color: app.theme_cls.primary_light
    font_size: normal_font
    pos_hint: {"center_x": 0.5}
    write_tab: False
    multiline: False


<LoginScreen>:
    md_bg_color: app.theme_cls.bg_dark

    ElevatedCard:
        size_hint: 0.7, 0.7
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDIconButton:
            icon: 'close'
            pos_hint: {"right": 1, "top": 1}
            on_release: root.close()

        MDLabel:
            text: "LOGIN"
            font_size: large_font
            halign: 'center'
            size_hint_y: 0.2
            theme_text_color: 'Custom'
            text_color: app.theme_cls.primary_color

        BoxLayout:
            orientation: 'vertical'
            spacing: rel_space
            padding: [rel_space]
            size_hint_x: 0.9
            size_hint_y: 0.6
            pos_hint: {"center_x": .5, "center_y": .6}
            adaptive_height: True

            LoginField:
                id: username
                hint_text: "User Name"
                icon_right: "account"
                height: normal_font * 1.5

            LoginField:
                id: password
                hint_text: "Password"
                icon_right: "eye-off"
                password: True

            MDFillRoundFlatButton:
                text: "LOGIN"
                font_size: normal_font
                pos_hint: {"center_x": 0.5}
                size: username.size[0] + (rel_space * 2), username.size[1]
                on_release: root.do_login()

            Widget:
                size_hint_y: 0.2
