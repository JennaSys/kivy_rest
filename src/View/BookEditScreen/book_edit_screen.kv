<BookField@MDTextField>:
    font_size: normal_font
    write_tab: False
    multiline: False


<BookEdit>:
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.theme_cls.bg_dark
        padding: rel_space

        MDTopAppBar:
            id: app_toolbar
            elevation: widget_elevation
            title: f"Edit Book ({'New' if root.book_id is None else str(root.book_id)})"
            anchor_title: "left"
            right_action_items: [["close", root.close]]

        MDBoxLayout:
            id: edit_fields
            orientation: 'vertical'
            padding: [rel_space]
            spacing: rel_space

            BookField:
                id: title
                hint_text: "Book Title"

            BookField:
                id: author
                hint_text: "Book Author"

            MDFillRoundFlatButton:
                id: save_edit
                text: "SAVE"
                font_size: normal_font
                pos_hint: {"center_x": 0.5}
                size_hint_x: 0.7
                disabled: True
                on_release: root.handle_save()

            Widget:
