<BookList>:
    MDBoxLayout:
        orientation: "vertical"
        padding: list_space
        spacing: list_space

        MDToolbar:
            id: app_toolbar
            elevation: widget_elevation
            title: "All the Books"
            right_action_items: [["dots-vertical", lambda ref: app.menu.click(ref)]]

        FloatLayout:
            ScrollView:
                scroll_timeout : 100
                pos: 0, 0

                MDList:
                    id: booklist
                    adaptive_height: True
                    padding: 0

            MDFloatingActionButton:
                id: add_btn
                icon: "plus-thick"
                md_bg_color: [1,0,0,1]
                pos: root.width - self.width - dp(20), dp(20)
                elevation: widget_elevation
                on_release: root.handle_addnew()


<Book>:
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: dp(16)

        MDIconButton:
            id: del_btn
            icon: 'trash-can'
            pos_hint: {"center_y": .5}
            on_release: root.handle_delete()

    MDCardSwipeFrontBox:
        TwoLineIconListItem:
            id: content
            text: root.text
            secondary_text: root.secondary_text
            on_release: root.handle_edit(root.book_id)

            IconLeftWidget:
                icon: "book-open"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_light
#                on_release: root.handle_edit(root.book_id)
